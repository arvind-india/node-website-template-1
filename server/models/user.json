{
    "id": "/modles/user.json",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "User",
    "description": "An entity representing a person or identity.",
    "type": "object",
    "properties": {
        "username": {
            "description": "The unique identifier for a user.",
            "type": "string"
        },
        "name": {
            "title": "Full Name",
            "description": "First and last names of the user.",
            "type": "string"
        },
        "email": {
            "title": "Email Address",
            "description": "The email of the user.",
            "type": "string",
            "format": "email"
        },
        "password": {
            "title": "Password",
            "description": "The password of the user.",
            "type": "string"
        },
        "roles": {
            "description": "The roles of the user.",
            "type": "array",
            "items": {
                "type": "string"
            }
        }
    },
    "required": ["username", "name", "email"]
}
